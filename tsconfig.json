{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "node16",
    "target": "es2022",
"resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": [
    "src/**/*.ts", // Inclua todos os arquivos TypeScript do seu projeto
    "types/**/*.d.ts" // Inclua as declarações personalizadas
  ]
}